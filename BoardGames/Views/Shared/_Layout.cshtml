<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" asp-append-version="true" />
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css" asp-append-version="true" />
    <link rel="stylesheet" asp-href-include="/css/**" asp-append-version="true" />
    <script asp-src-include="/lib/jquery/jquery.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    @await Component.InvokeAsync("NavigationMenu")

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
